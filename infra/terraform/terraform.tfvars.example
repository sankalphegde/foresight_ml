# Required: Your GCP project ID
project_id = "your-gcp-project-id"

# Optional: GCP region (default: us-central1)
region = "us-central1"

# Optional: Environment name (default: dev)
environment = "dev"

# Optional: Cloud Composer size (default: ENVIRONMENT_SIZE_SMALL)
# Options: ENVIRONMENT_SIZE_SMALL, ENVIRONMENT_SIZE_MEDIUM, ENVIRONMENT_SIZE_LARGE
composer_environment_size = "ENVIRONMENT_SIZE_SMALL"

# Optional: Data retention days (default: 90)
data_retention_days = 90

# Optional: Enable Cloud Composer (default: true)
# Set to false to save ~$300/month and use local Airflow only
enable_composer = true
